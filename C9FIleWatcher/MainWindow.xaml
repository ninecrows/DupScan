<Window x:Class="C9FIleWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C9FIleWatcher"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
        <DockPanel x:Name="PanelControl" Width="256">
                <DockPanel VerticalAlignment="Top" Height="128">
            <Image x:Name="ImageFromDrop" Height="128" VerticalAlignment="Top" Width="128" Source="From.png" AllowDrop="True" Drop="ImageFromDrop_Drop"/>
                <Image x:Name="ImageToDrop" Height="128" VerticalAlignment="Top" Width="128" Source="To.png" AllowDrop="True" Drop="ImageToDrop_Drop"/>
         </DockPanel>
            </DockPanel>
            <ScrollViewer>
        <DockPanel x:Name="DockPanel_WorkingItems">

        </DockPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Window>
